<Page x:Class="System_of_airport_flights.AdminSignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:System_of_airport_flights"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="450"
      Title="Авторизация администратора">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Foreground="White">
                Имя
            </Label>

            <TextBox Grid.Row="1" Height="20" Width="90">

            </TextBox>

            <Label Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Foreground="White">
                Фамилия
            </Label>

            <TextBox Grid.Row="1" Grid.Column="1" Height="20" Width="90">

            </TextBox>

        </Grid>

        <Grid Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Foreground="White">
                Логин
            </Label>

            <TextBox x:Name="login" Grid.Row="1" Grid.Column="0" Height="20" Width="90">

            </TextBox>
            
            <Label Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Foreground="White">
                Пароль
            </Label>

            <PasswordBox x:Name="password" Grid.Row="1" Grid.Column="1" Height="20" Width="90">

            </PasswordBox>

        </Grid>

        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="goBackButton" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="30" Click="goBackButton_Click" Background="#FF748DB2" Foreground="White" FontSize="14">
                Назад
            </Button>

            <Button x:Name="signupButton" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="30" Click="signupButton_Click" FontSize="14" Foreground="White" Background="#FF748DB2">
                Регистрация
            </Button>

        </Grid>

    </Grid>
</Page>
